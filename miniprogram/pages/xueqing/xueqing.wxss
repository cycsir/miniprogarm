.jiemian {
  width: 339rpx;
  /* height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
  border: 1px solid #D1D1D1;
  padding-bottom: 10rpx;
}
.right image{
  height: 20rpx;
}

.photo{
  height: 300rpx;
  margin:30rpx;
  background-color: red;
}
.photo image{
  margin:20rpx;
  height: 300rpx;
  margin:30rpx;
}
.header{
  height: 70rpx;
  margin: 10rpx;
  margin:10rpx 50rpx;
  /* background-color: gray; */
  
}
.left{
  float: left;
  line-height: 70rpx;
}
.right{
  float: right;
  line-height: 70rpx;
}

.row{
  display: flex;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.pic{
  flex:2;
}
.pic image{
  width: 180rpx;
  height: 100%;
}
.text{
  flex:8;
  background-color: #eeeeee;
  padding-left: 20rpx;
  border-bottom: 1px solid black;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.text .title{
  font-size: 40rpx;
  
}
.text .time{
  font-size: 30rpx;
  color:#999;
}